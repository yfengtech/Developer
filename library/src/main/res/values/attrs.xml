<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="curveChartView" format="reference"/>

    <declare-styleable name="CurveChartView">
        <attr name="cv_color" format="color"/>
        <attr name="cv_fillColor" format="color"/>
        <attr name="cv_labelTextSize" format="dimension"/>
        <attr name="cv_partCount" format="integer"/>
        <attr name="cv_strokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="HierarchyLayout">
        <attr name="hl_horizontalSpacing" format="dimension"/>
        <attr name="hl_verticalSpacing" format="dimension"/>
        <attr name="hl_connectLineColor" format="color"/>
        <attr name="hl_connectLineStrokeWidth" format="dimension"/>
        <attr name="hl_connectLineCornerPathEffect" format="dimension"/>
        <attr name="hl_connectLineEffectSize" format="dimension"/>
        <attr name="hl_hierarchyMinScale" format="float"/>
        <attr name="hl_hierarchyMaxScale" format="float"/>
        <attr name="hl_setHasFixedSize" format="boolean"/>
        <attr name="hl_previewWidth" format="dimension"/>
    </declare-styleable>
</resources>