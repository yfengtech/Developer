<?xml version="1.0" encoding="utf-8"?>
<com.cz.library.widget.DivideLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    auto:dl_divideGravity="item_divide"
    auto:dl_itemDivideDrawable="@color/divide"
    auto:dl_itemDividePadding="12dp"
    auto:dl_itemDivideSize="@dimen/divideSize">

    <Switch
        android:id="@+id/sc_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_switch"
        android:textColor="?attr/developerTextColor"
        android:background="@drawable/white_item_selector"
        android:padding="12dp"/>


</com.cz.library.widget.DivideLinearLayout>