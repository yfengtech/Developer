<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:clickable="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?colorPrimary"
        app:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="4dp" />

    <cz.developer.library.widget.hierarchy.HierarchyLayout
        android:id="@+id/hierarchyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:hl_horizontalSpacing="80dp"
        app:hl_verticalSpacing="20dp"
        app:hl_connectLineStrokeWidth="2dp"
        app:hl_previewWidth="200dp"
        app:hl_connectLineEffectSize="6dp"
        app:hl_connectLineCornerPathEffect="6dp"
        app:hl_hierarchyMaxScale="4"
        app:hl_hierarchyMinScale="0.2"
        android:padding="20dp"
        android:background="@android:color/black"/>

</LinearLayout>