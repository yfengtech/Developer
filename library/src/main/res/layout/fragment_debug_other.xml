<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cz.library.widget.DivideTextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemHeight"
            android:background="@drawable/white_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/clear_app_cache"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            auto:dt_divideDrawable="@color/divide"
            auto:dl_divideGravity="bottom"
            auto:dl_dividePadding="12dp" />


    </LinearLayout>
</ScrollView>