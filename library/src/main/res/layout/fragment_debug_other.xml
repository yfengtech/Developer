<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <com.cz.library.widget.DivideLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        auto:dl_itemDivideSize="@dimen/divideSize"
        auto:dl_divideDrawable="@color/divide"
        auto:dl_itemDividePadding="12dp">

        <TextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_item_selector"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/clear_app_cache"
            android:textColor="?attr/developerTextColor"
            android:textSize="15sp"
            />


    </com.cz.library.widget.DivideLinearLayout>
</ScrollView>