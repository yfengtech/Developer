<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?colorPrimary"
        auto:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="4dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:clickable="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            auto:divider="@drawable/developer_divider_shape"
            auto:showDividers="middle|end">

            <TextView
                android:id="@+id/clearCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/developer_white_item_selector"
                android:padding="@dimen/developerPadding"
                android:gravity="center_vertical"
                android:text="@string/clear_app_cache"
                android:textSize="@dimen/developerLargeTextSize"
                android:textColor="@android:color/black"/>


        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>
</LinearLayout>
