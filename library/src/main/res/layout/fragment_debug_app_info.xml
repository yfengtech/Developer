<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:scrollbars="none">

    <com.cz.library.widget.DivideLinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        auto:dl_dividePadding="12dp"
        auto:dl_divideGravity="item_divide"
        auto:dl_itemDivideSize="@dimen/divideSize"
        auto:dl_itemDivideDrawable="@color/divide"
        auto:dl_itemDividePadding="12dp">

        <TextView
            android:id="@+id/tv_header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="@string/app_info"
            android:background="@color/gray"
            android:textColor="?attr/developerTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_version_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="@string/model_info"
            android:textColor="?attr/developerTextColor"
            android:background="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_os_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_os_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_device_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_device_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_android_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="?attr/developerTextColor"
            android:textSize="14sp" />



    </com.cz.library.widget.DivideLinearLayout>
</ScrollView>