<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?attr/developerTextColor"/>

    <TextView
        android:id="@+id/tv_item_count"
        android:text="ItemCount:3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="?attr/developerDarkTextColor"
        android:layout_below="@+id/tv_info"
        android:layout_toLeftOf="@+id/tv_aspect_ratio" />

    <TextView
        android:id="@+id/tv_aspect_ratio"
        android:text="Aspect Ratio:3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="?attr/developerDarkTextColor"
        android:layout_alignBottom="@+id/tv_item_count"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="?attr/developerDarkTextColor"
        android:layout_below="@+id/tv_item_count"
        android:text="Padding:12" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="?attr/developerDarkTextColor"
        android:layout_below="@+id/tv_padding"/>

    <cz.developer.library.widget.ThumbView
        android:id="@+id/tv_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_type"/>

</RelativeLayout>