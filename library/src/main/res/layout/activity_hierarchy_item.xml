<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hierarchyItemView"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_accent_item_selector">

    <TextView
        android:id="@+id/viewClassNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/alphaGray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/viewResourceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/alphaGray"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewClassNameText"
        android:layout_marginTop="4dp"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/viewRectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/alphaGray"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewResourceName"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/viewDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/alphaGray"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewRectText"
        android:textSize="13sp"/>

</RelativeLayout>