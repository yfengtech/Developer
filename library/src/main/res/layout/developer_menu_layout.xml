<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right|bottom"
    android:gravity="bottom">


    <cz.developer.library.widget.memory.MemoryView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:padding="12dp"/>

    <LinearLayout
        android:id="@+id/debugMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/memoryButton1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_bug_report"
            android:background="@drawable/primary_oval_shape"/>

        <ImageView
            android:id="@+id/memoryButton2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_bug_report"
            android:background="@drawable/primary_oval_shape"/>

        <ImageView
            android:id="@+id/toggleMenu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_bug_report"
            android:background="@drawable/primary_oval_shape"/>

    </LinearLayout>


</LinearLayout>