<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="32dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="@string/lock_password"
        android:textColor="@color/colorAccent"/>

    <com.cz.library.widget.PrivacyLockView
        android:id="@+id/lock_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        auto:pv_itemDrawable="@drawable/primary_round_shape"
        auto:pv_itemPadding="24dp"
        auto:pv_itemDrawableSize="48dp"
        auto:pv_privacyDrawable="@drawable/dark_primary_round_shape"
        auto:pv_privacyDrawableWidth="20dp"
        auto:pv_privacyDrawableHeight="20dp"/>


</LinearLayout>